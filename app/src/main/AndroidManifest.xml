<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.story.mipsa.attendancetracker">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".myFirebaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_final"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Settings"
            android:launchMode="singleTop"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".Reminder"
            android:launchMode="singleTop"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:launchMode="singleTop"
            android:name=".extraClassEdit"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:launchMode="singleTop"
            android:name=".InstructionsPage"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:launchMode="singleTop"
            android:name=".editSubjectDetails"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SubjectDetails"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:launchMode="singleTop"
            android:name=".passwordReset"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:launchMode="singleTop"
            android:name=".SignUp"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:launchMode="singleTop"
            android:name=".Login"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:launchMode="singleTop"
            android:name=".AttendanceTarget"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:launchMode="singleTop"
            android:name=".SplashActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity

            android:name=".MainActivity"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>