<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.story.mipsa.attendancetracker">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".myFirebaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_final"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".extraClassEdit"></activity>
        <activity android:name=".InstructionsPage" />
        <activity android:name=".editSubjectDetails" />
        <activity android:name=".SubjectDetails" />
        <activity android:name=".passwordReset" />
        <activity android:name=".SignUp" />
        <activity android:name=".Login" />
        <activity android:name=".AttendanceTarget" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>