<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/extraSubjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="SUBJECT NAME"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/enterSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_below="@+id/extraSubjectName"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="7dp"
        android:textSize="20sp"
        android:text="Extra Class" />

    <RadioGroup
        android:id="@+id/radioExtraGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterSubject"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">

        <RadioButton
            android:id="@+id/radioExtraPresent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_corner_background_green"
            android:text="Present" />

        <RadioButton
            android:id="@+id/radioExtraAbsent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_corner_red"
            />
    </RadioGroup>

    <Button
        android:id="@+id/cancelExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add"
        android:layout_alignBottom="@+id/addExtra"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:text="Cancel"
        android:background="@drawable/rounded_corner_green"
        />

    <Button
        android:id="@+id/addExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/radioExtraGroup"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        android:text="Add"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/rounded_corner_black" />

</RelativeLayout>